<div class="container">

    <div id="update-curso">

        <!-- Titulo -->
        <div class="row">
            <div class="col-8">
                <h1>Editar Curso</h1>
            </div>
            <div class="col-4">
                <div class="float-right mt-4">
                    <a class="btn btn-secondary" href="/curso"><i class="fas fa-arrow-left"></i> Voltar</a>
                </div>
            </div>
        </div>
        <!-- /Titulo -->

        <div class="row">
            <div class="col-8">
                <form method="POST" action="/curso/update/{{curso.id}}">

                    <div class="form-group">
                        <label for="sigla">Sigla</label>
                        <input type="text" class="form-control" name="sigla" id="sigla" value="{{curso.sigla}}"
                            placeholder="Informe a sigla do curso">
                             <div class="invalid-feedback d-block">{{showError errors 'sigla'}}</div>
                        <small id="SiglaHelp" class="form-text text-muted">Em caso de dúvida, verifique no site da
                            UFAM.</small>
                    </div>

                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <input type="text" class="form-control " name="nome" id="nome" value="{{curso.nome}}"
                            placeholder="Informe o nome do curso">
                        <div class="invalid-feedback d-block">{{showError errors 'nome'}}</div>
                    </div>

                    <div class="form-group">
                        <label for="descricao">Descrição do curso</label>
                        <textarea class="form-control" name="descricao" id="descricao" value="{{curso.descricao}}"
                            rows="3">Curso dos alunos Top</textarea>
                             <div class="invalid-feedback d-block">{{showError errors 'descricao'}}</div>
                    </div>
                    <fieldset>
                        <legend>Area de Conhecimento</legend>
                        <div class="form-check">
                            <label class="form-check-label">
                                {{#each areas}}
                                <input type="radio" class="form-check-input" name="id_area" value="{{id}}" checked="">
                                <li>{{nome}}</li>
                                {{/each}}
                            </label>
                        </div>
                    </fieldset>
                    <input type="hidden" name="_csrf" value="{{token}}">


                    <button type="submit" class="btn btn-primary">Salvar Curso</button>

                </form>
            </div>
        </div>

    </div>
</div>