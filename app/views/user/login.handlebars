<div id="login" class="bs-docs-section">
  <div class="row">
    <div class="col-lg-6">
      <h1 class="text-center">
        Acesse sua conta</h1>
      <div class="login-form-container">
        <hr>
        <form method="POST" action="/user/login">
          <div class="form-group">
            <input name="email" type="email" placeholder="EndereÃ§o de E-mail" class="form-control" value="" autofocus>
            <div class="invalid-feedback d-block">{{erro1}}</div>
          </div>
          <div class="form-group">
            <input name="senha" type="password" placeholder="Senha" class="form-control">
            <div class="invalid-feedback d-block">{{erro2}}</div>
          </div>
          <div class="form-group form-check">
            <input name="remember" type="checkbox" id="remember" class="form-check-input">
            <label for="remember" class="form-check-label">Mantenha-me logado</label>
          </div>

          <div class="form-group">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-dark btn-lg btn-block">
              <span class="button-text">Acessar</span>
            </button>
          </div>
        </form>
        <p class="text-center">
          <a href="/forgot">Esqueceu sua senha?</a>
        </p>
      </div>
    </div>
  </div>